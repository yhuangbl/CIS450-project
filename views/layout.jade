                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-main-collapse')
                        | Menu 
                        i.fa.fa-bars
                // Collect the nav links, forms, and other content for toggling
                .collapse.navbar-collapse.navbar-right.navbar-main-collapse
                    ul.nav.navbar-nav
                        // Hidden li included to remove active class from about link when scrolled up past about section
                        li.hidden
                            a(href='#page-top')
                        li
                            a.page-scroll(href='/redirect_country') Country
                        li
                            a.page-scroll(href='/redirect_sport') Sport
                        li
                            a.page-scroll(href='/map') Map
                        li
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        li
                            a.page-scroll(href='/') Home
